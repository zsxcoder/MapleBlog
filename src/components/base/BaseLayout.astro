      // é¡µé¢åˆå§‹åŠ è½½æ—¶éšè—åŠ è½½åŠ¨ç”»
      document.addEventListener("DOMContentLoaded", () => {
        hidePageLoading();
      });

      // å¦‚æœé¡µé¢å·²ç»åŠ è½½å®Œæˆï¼ˆå¤„ç†ç¼“å­˜æƒ…å†µï¼‰
      if (document.readyState === "complete") {
        hidePageLoading();
      }

      // è¿”å›é¡¶éƒ¨åŠŸèƒ½å·²é›†æˆåˆ°Footerç»„ä»¶ä¸­
    </script>

