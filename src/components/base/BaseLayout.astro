      // ç›‘å¬é¡µé¢å¼€å§‹åŠ è½½äº‹ä»¶
      document.addEventListener("astro:before-preparation", () => {
        // å¯¹äºå¿«é€Ÿå¯¼èˆªï¼Œç¨å¾®å»¶è¿Ÿæ˜¾ç¤ºåŠ¨ç”»ä»¥é¿å…é—ªçƒ
        const delay = isQuickNavigation() ? 150 : 0;
        showPageLoading(delay);
