      // ç›‘å¬æ‰€æœ‰é“¾æ¥ç‚¹å‡»äº‹ä»¶
      document.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        const link = target.closest("a");

        if (link && link.href) {
          const url = new URL(link.href);
          const currentUrl = new URL(window.location.href);

          // å¦‚æœæ˜¯åŒåŸŸåçš„é“¾æ¥ä¸”ä¸æ˜¯é”šç‚¹é“¾æ¥
          if (url.origin === currentUrl.origin && !url.hash) {
            // æ£€æŸ¥æ˜¯å¦æ˜¯ä¸‹è½½é“¾æ¥æˆ–ç‰¹æ®Šé“¾æ¥
            const isDownload =
              link.hasAttribute("download") ||
              link.href.match(/\.(pdf|doc|docx|zip|rar|exe|dmg)$/i);
            const isExternal = link.target === "_blank";
            const isMailto = link.href.startsWith("mailto:");
            const isTel = link.href.startsWith("tel:");
            const isAnchor = link.getAttribute("href")?.startsWith("#");

            // åªå¯¹æ™®é€šçš„å†…éƒ¨é¡µé¢é“¾æ¥æ˜¾ç¤ºåŠ è½½åŠ¨ç”»
            if (
              !isDownload &&
              !isExternal &&
              !isMailto &&
              !isTel &&
              !isAnchor
            ) {
              // æ£€æŸ¥æ˜¯å¦æ˜¯ç›¸åŒé¡µé¢çš„é“¾æ¥
              if (url.pathname !== currentUrl.pathname) {
                showPageLoading();
              }
            }
          }
        }
      });

      // ç›‘å¬æµè§ˆå™¨å‰è¿›åé€€æŒ‰é’®
      window.addEventListener("popstate", () => {
        showPageLoading();
      });

      // ç›‘å¬è¡¨å•æäº¤ï¼ˆå¦‚æœç´¢è¡¨å•ï¼‰
      document.addEventListener("submit", (e) => {
        const form = e.target as HTMLFormElement;
        if (form && form.method.toLowerCase() === "get") {
          showPageLoading();
