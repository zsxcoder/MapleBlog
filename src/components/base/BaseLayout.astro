      // æ£€æŸ¥æ˜¯å¦ä¸ºå¿«é€Ÿå¯¼èˆªï¼ˆé¿å…é—ªçƒï¼‰
      function isQuickNavigation() {
        return (
          document.readyState === "complete" ||
          document.readyState === "interactive"
