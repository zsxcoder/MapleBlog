  // 评论区跳转按钮功能
  let goToCommentsBtn = document.getElementById('go-to-comments-btn');

  function refreshControlRefs() {
    goToCommentsBtn = document.getElementById('go-to-comments-btn');
    console.log('refreshControlRefs called:', goToCommentsBtn);
  }

  // 点击按钮跳转到评论区
  function setupGoToCommentsBtn() {
    refreshControlRefs();

    if (goToCommentsBtn) {
      console.log('setupGoToCommentsBtn called, adding event listener');
      // 先移除可能存在的事件监听器，避免重复添加
      goToCommentsBtn.removeEventListener('click', handleGoToComments);
      // 添加新的事件监听器
      goToCommentsBtn.addEventListener('click', handleGoToComments);
    }
  }

  // 点击事件处理函数
  function handleGoToComments() {
    console.log('Button clicked, trying to find comments section');
    // 尝试多种方式找到评论区
    const commentsSection = document.getElementById('tcomment') ||
                           document.querySelector('#tcomment') ||
                           document.querySelector('.twikoo');
    console.log('Found comments section:', commentsSection);
    if (commentsSection) {
      console.log('Scrolling to comments section');
      // 使用更可靠的滚动方法
      commentsSection.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
      // 同时使用window.scrollTo作为备选方案
      const rect = commentsSection.getBoundingClientRect();
      window.scrollTo({
        top: window.pageYOffset + rect.top - 100, // 减去100px，避免被导航栏遮挡
        behavior: 'smooth'
      });
    } else {
      console.log('Comments section not found');
    }
  }

  // 初始化
  function init() {
    console.log('init called');
    setupGoToCommentsBtn();
  }

  // 使用Astro特定的事件
  document.addEventListener('astro:page-load', init);

  // 同时保留标准事件，确保兼容性
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

  // 添加页面加载完成后的延迟初始化，确保所有元素都已渲染
  setTimeout(init, 1000);
</script>
