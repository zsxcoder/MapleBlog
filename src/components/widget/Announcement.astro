---
// Announcement Component for MapleBlog
// Based on https://github.com/zsxcoder/fuwari/blob/main/src/components/widget/Announcement.astro

import LiquidGlass from "../common/LiquidGlassLess.astro";
import { ANNOUNCEMENT_CONFIG } from "@lib/config";

interface Props {
  title?: string;
  content?: string;
  link?: string;
  linkText?: string;
}

const {
  title = ANNOUNCEMENT_CONFIG.title,
  content = ANNOUNCEMENT_CONFIG.content,
  link = ANNOUNCEMENT_CONFIG.link,
  linkText = ANNOUNCEMENT_CONFIG.linkText
} = Astro.props;
---

<section class="w-full">
  <LiquidGlass heavy>
    <div class="rounded-lg p-4 md:p-5">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
        <div class="flex-1">
          {title && (
            <h3 class="text-lg font-bold mb-2 text-txt-p dark:text-darkmode-txt-p flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                <circle cx="24" cy="24" r="21" fill="#2196F3"/>
                <path fill="#fff" d="M22 22h4v11h-4z"/>
                <circle cx="24" cy="16.5" r="2.5" fill="#fff"/>
              </svg>
              {title}
            </h3>
          )}
          <p class="text-txt-light dark:text-darkmode-txt-light">
            {content}
          </p>
        </div>
        {link && (
          <a
            href={link}
            class="inline-flex items-center gap-2 text-primary hover:text-primary-dark transition-colors"
          >
            {linkText}
            <span class="w-4 h-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </span>
          </a>
        )}
      </div>
    </div>
  </LiquidGlass>
</section>

<script>
  // Optional: Add animation or interaction logic here
</script>
